<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.juwon.springcommunity.repository.UserRepository">

    <insert id="save" parameterType="com.juwon.springcommunity.domain.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (password, email, nickname, role)
        VALUES (#{password}, #{email}, #{nickname}, #{role})
    </insert>

    <select id="findById" parameterType="long" resultType="com.juwon.springcommunity.domain.User">
        SELECT id, password, email, nickname, role
        FROM user
        WHERE id = #{id}
    </select>

    <select id="findAll" resultType="com.juwon.springcommunity.domain.User">
        SELECT id, password, email, nickname, role
        FROM user
    </select>

    <select id="findByIds" resultType="com.juwon.springcommunity.domain.User">
        SELECT
            id,
            password,
            email,
            nickname,
            role
        FROM
            user
        <if test="ids != null and !ids.isEmpty()">
            WHERE id IN
            <foreach collection="ids" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>
        <if test="ids == null or ids.isEmpty()">
            WHERE 1=0
        </if>
    </select>

    <delete id="delete" parameterType="long">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <select id="existsByNickname" parameterType="string" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM user
        WHERE nickname = #{nickname}
    </select>
    
    <select id="findByEmail" parameterType="String" resultType="com.juwon.springcommunity.domain.User">
        SELECT id, password, email, nickname, role
        FROM user
        WHERE email = #{email}
    </select>

</mapper>
