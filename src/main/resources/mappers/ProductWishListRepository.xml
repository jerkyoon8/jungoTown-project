<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.juwon.springcommunity.repository.ProductWishListRepository">

    <select id="checkWishList" resultType="int">
        SELECT COUNT(*)
        FROM product_wishlist
        WHERE user_id = #{userId} AND product_id = #{productId}
    </select>

    <insert id="save">
        INSERT INTO product_wishlist (user_id, product_id)
        VALUES (#{userId}, #{productId})
    </insert>

    <select id="findWishListByUserId" resultType="com.juwon.springcommunity.domain.Product">
        SELECT p.*
        FROM product p
        JOIN product_wishlist w ON p.id = w.product_id
        WHERE w.user_id = #{userId}
        ORDER BY p.created_at DESC
    </select>

</mapper>
